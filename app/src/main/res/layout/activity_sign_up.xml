<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <EditText
        android:id="@+id/et_email_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_profile_pic_signup"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/edittext_background"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:autofillHints="" />

    <!--    Email Box-->

    <EditText
        android:id="@+id/et_pass_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_email_signup"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/edittext_background"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <!--    Password box-->

    <EditText
        android:id="@+id/et_pass_repeat_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_pass_signup"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/edittext_background"
        android:hint="Password Repeat"
        android:inputType="textPassword"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />


<!--    Removing that image at the top because it has no purpose, better one to be designed -->
    <ImageView
        android:id="@+id/iv_profile_pic_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@mipmap/ic_launcher_round" />

    <RelativeLayout
        android:id="@+id/rl_signup_signin"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/tv_signup_signup"
        android:background="@drawable/custom_shape_background"
        android:layout_width="wrap_content"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="or"
            android:id="@+id/tv_signup_or"/>

        <TextView
            android:id="@+id/tvLogmein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/tv_signup_or"
            android:text="Log in"
            android:textAppearance="?android:textAppearance" />

    </RelativeLayout>


    <TextView

        android:id="@+id/tv_signup_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_pass_repeat_signup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Sign Up"

        android:textAppearance="?android:textAppearanceLarge" />


    <!--    <include-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="50dp"-->

    <!--        android:layout_marginLeft="6dp"-->
    <!--        android:layout_marginTop="100dp" />-->
</RelativeLayout>
